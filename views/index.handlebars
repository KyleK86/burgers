<div class="container text-center border border-danger" id="header">
    <div class="row">
        <div class="col-sm">
            <h1>BURGERS!</h1>
        </div>
    </div>
</div>

<div class="container">
    <div class="row">
        <div class="col-lg text-center border border-danger" id="left">
            <h2>Ready to Eat</h2>
            <ul>
                {{#each burgers}}
                {{#unless devoured}}
                {{> burgers/burgerBlock devoured=true}}
                {{/unless}}
                {{/each}}
            </ul>
        </div>
        <div class="col-lg text-center border border-danger" id="right">
            <h2>Devoured</h2>
            <ul>
                {{#each burgers}}
                {{#if devoured}}
                {{> burgers/burgerBlock devoured=false}}
                {{/if}}
                {{/each}}
            </ul>
        </div>
    </div>
</div>

<div class="container text-center border border-danger">
    <div class="row">
        <div class="col-sm">
            <h2>Add a Burger</h2>

            <form class="create-form">

                <div class="form-group">
                    <label for="ca">Burger Name:</label>
                    <input type="text" id="ca" name="name">
                </div>

                <div class="form-group">
                    <label for="devoured">Devoured?</label><br>
                    <input type="radio" name="devoured" value="1" checked> Devoured!<br>
                    <input type="radio" name="devoured" value="0"> Ready
                </div>

                <button type="submit">Add Burger</button>
            </form>
        </div>
    </div>
</div>